<Window x:Class="Schedule.View.ViewLessonCRUDOperation.UpdateLessonsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Schedule.View.ViewLessonCRUDOperation"
        mc:Ignorable="d"
        Title="UpdateLessonsWindow" Height="340" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Orientation="Vertical"
                HorizontalAlignment="Center"
                VerticalAlignment="Center" 
                Width="200">
            <TextBlock Text="День"/>
            <ComboBox/>
            <TextBlock Text="Номер занятия"/>
            <ComboBox/>
            <TextBlock Text="Кабинет"/>
            <ComboBox/>
            <TextBlock Text="Группа"/>
            <ComboBox/>
            <TextBlock Text="Предмет"/>
            <ComboBox/>
            <TextBlock Text="Преподователь"/>
            <ComboBox/>
        </StackPanel>
        <Button Grid.Row="1" Content="Изменить Пару"/>
    </Grid>
</Window>

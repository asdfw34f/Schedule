<Window
    x:Class="Schedule.View.ViewCabinetCRUDOperation.UpdateCabinetWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Schedule.View.ViewCabinetCRUDOperation"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="CreateCabinetWindow"
    Width="300"
    Height="200"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="50" />
        </Grid.RowDefinitions>
        <StackPanel
            Grid.Row="0"
            Width="200"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Orientation="Vertical">
            <TextBlock Text="Тип кабинета" />
            <ComboBox />
            <TextBlock Text="Количество мест" />
            <TextBox />
            <TextBlock Text="Номер кабинета" />
            <TextBox />
        </StackPanel>
        <Button Grid.Row="1" Content="Изменить кабинет" />
    </Grid>
</Window>

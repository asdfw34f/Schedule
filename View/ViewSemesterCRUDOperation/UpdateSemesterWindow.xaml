<Window x:Class="Schedule.View.ViewSemesterCRUDOperation.UpdateSemesterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Schedule.View.ViewSemesterCRUDOperation"
        mc:Ignorable="d"
        Title="UpdateSemesterWindow" Height="250" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Orientation="Vertical"
                HorizontalAlignment="Center"
                VerticalAlignment="Center" 
                Width="200">
            <TextBlock Text="Год"/>
            <TextBox/>
            <TextBlock Text="Четная или нечетная неделя"/>
            <ComboBox/>
        </StackPanel>
        <Button Grid.Row="1" Content="Изменить семестр"/>
    </Grid>
</Window>
